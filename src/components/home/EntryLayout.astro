---
import type { HomeEntry } from "@/types";
import { Image } from "astro:assets";
import BannerComponent from "./Banner.tsx";

interface Props {
  entry: HomeEntry;
}

const { entry } = Astro.props;
const { image, imageAlt, title, subtitle, content, button } = entry.data;
---

<!-- Banner -->
<BannerComponent
  client:visible
  title={title}
  subtitle={subtitle}
  content={content}
  button={button}
>
  {
    image && (
      <Image
        class="hidden lg:block mb-6 animate-updown "
        src={image}
        alt={imageAlt}
        width={1024}
        height={1024}
        loading="eager"
      />
    )
  }
</BannerComponent>
