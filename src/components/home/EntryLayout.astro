---
import BaseLayout from "@components/base/BaseLayout.astro";
import type { HomeEntry } from "@/types";
import { Image } from "astro:assets";
import BannerComponent from "./Banner.tsx";
//import 'bootstrap/dist/css/bootstrap.min.css';

interface Props {
  entry: HomeEntry;
}

const { entry } = Astro.props;
const { image, imageAlt, title, content, button } = entry.data;
---

<BaseLayout>
  <!-- Banner -->
  <BannerComponent client:only="react" title={title} content={content} button={button}>
    <Image
      class="mb-6"
      src={image}
      alt={imageAlt}
      width={1024}
      height={1024}
      loading="eager"
    />
  </BannerComponent>  
  
</BaseLayout>
