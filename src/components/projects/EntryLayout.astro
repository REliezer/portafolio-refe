---
import type { ProjectEntry } from "@/types";
import { Image } from "astro:assets";
import BaseLayout from "@components/base/BaseLayout.astro";
import { formatDate } from "@lib/formatDate";
import ProjectInfo from "./ProjectInfo.astro";
import PageHeader from "@components/common/PageHeader.astro";
import TechTable from "@components/common/TechTable.astro";

interface Props {
  entry: ProjectEntry;
}

const { entry } = Astro.props;
const { title, resume, date, image, imageAlt, categories, author, stack, description, content, github, link, platform, diagrama} = entry.data;
const entryDate = date ? formatDate(date) : "";
---

<BaseLayout title={title} description={resume} image={image?.src}>
  <PageHeader title={title} />
  <section class="section">    
    <div class="container">
      <div class="row justify-center">
        <article class="lg:col-10 flex flex-wrap content-start">
          <!-- Cover Photo -->
          {
            image && (
              <div class="col basis-2/3 p-2 min-w-72">
                <div class="glass rounded-lg intersect:animate-fadeDown">
                  <Image
                    class="w-full rounded-lg"
                    src={image}
                    alt={imageAlt}
                    width={1920}
                    height={1080}
                    loading="eager"
                  />
                </div>
              </div>
            )
          }
          <!-- About Project-->
          <ProjectInfo 
            author={author}
            entryDate={entryDate}
            categories={categories}
            github={github}
            link={link}
            resume={resume}
            platform={platform}
          />
          <!-- Descripcion -->
          {
            description && (
              <section class="col basis-full p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeUp  ">
                  <h3 class="mb-2">Acerca del proyecto</h3>
                  <div class="justify-center">
                    <div class="text-justify my-1">{description}</div>
                    <hr class="my-1" />
                  </div>
                </div>
              </section>
            )
          }
                    <!-- Diagrama -->
           {
            diagrama && (
              <section class="col basis-full p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeDown">
                  <h3 class="mb-2">Arquitectura Propuesta</h3>
                  <div class="justify-center mb-2">
                    <div class="text-justify my-1">{diagrama.resume}</div>
                  </div>
                  <Image
                    class="w-full rounded-lg"
                    src={diagrama.image}
                    alt={diagrama.imageAlt}
                    width={1920}
                    height={1080}
                    loading="eager"
                  />
                  <hr class="my-1" />
                </div>
              </section>
            )
           }
          <!-- Contenido -->
          {
            content && (
              <section class="col basis-full p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeUp  ">
                  <h3 class="mb-2">Contenido del proyecto:</h3>
                  <div class="justify-center mb-2">
                    <div class="text-justify my-1">{content.description}</div>
                  </div>
                  <div class="row justify-center">
                    {content?.item?.map((item, index) => (
                      <div class="my-1">
                        <h4>{item.nombre}</h4>
                        <p class="font-mono">{item.resume}</p>
                        {item.modulos &&
                          item.modulos.length > 0 &&
                          item.modulos.map((mod: string, i: number) => (
                            <div class="ml-4">
                              {i + 1}. {mod}
                            </div>
                          ))}
                      </div>
                    ))}                    
                  </div>
                  <hr class="my-1" />
                </div>
              </section>
            )
          }

          <!-- Tecnologias -->
  {
            stack && (
              <section class="col basis-1/3 p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeUp  ">
                  <h3 class="mb-2">TÃ©cnologias utilizadas</h3>
                  <TechTable techs={stack} />
                  <hr class="my-1" />
                </div>
              </section>
            )
          }
          <!-- Gallery -->
           
        </article>
      </div>
    </div>
  </section>
</BaseLayout>
