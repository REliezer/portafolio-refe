---
import BaseLayout from "@components/base/BaseLayout.astro";
import { markdownify } from "@lib/textConverter";
import { Image } from "astro:assets";
import type { AboutEntry } from "@/types";
import { render } from "astro:content";

interface Props {
  entry: AboutEntry;
}

const { entry } = Astro.props;
const { title, description, image, imageAlt } = entry.data;
const { Content } = await render(entry);
---

<BaseLayout title={title} description={description} image={image?.src}>
  <section class="section-sm">
    <div class="container glass rounded-lg text-center p-8 xl:col-12 md:col-10 lg:col-7 intersect:animate-fadeUp opacity-0 intersect-no-queue">
      <div class="row justify-center">
        <h2 set:html={markdownify(title)} class="h3 mb-6" />
        <div class="xl:col-9 md:col-8 text-justify">            
              <Content />
              { description && (
                <p class="text-muted mt-4">
                  {(description)}
                </p>
              ) }
        </div>
        <div class="xl:col-3 md:col-4">
          {
            image && (
              <Image
                class="mb-6 rounded-lg w-64"
                src={image}
                alt={imageAlt}
                width={64}
                height={64}
                loading="eager"
              />
            )
          }
          </div>          
      </div>
    </div>
  </section>
</BaseLayout>
