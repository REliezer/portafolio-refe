---
import { Image } from 'astro:assets';
import type { ImageMetadata } from "astro";

interface Props {
  images: {
    img: ImageMetadata;
    imgAlt?: string;
  }[];
}

const { images } = Astro.props;
---

<div class="container mb-4 overflow-x-auto flex w-full mx-auto px-[15px] scroll-smooth snap-x snap-mandatory space-x-4">
  {
    images?.map( (img, i) => (
      <div 
        class="snap-center bg-white/25 shadow-lg backdrop-blur-md rounded-xl p-4 flex-shrink-0 w-[90%] sm:w-1/2 md:w-1/3 lg:w-1/4"
      >
        <Image
          class="rounded-lg"
          src={img.img}
          alt={img.imgAlt ? img.imgAlt : `Picture ${i}`}
          width={1920}
          height={1080}
          loading="eager"
          title={img.imgAlt}
        />
      </div>
    ))
  }
</div>