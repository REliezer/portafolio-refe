---
import type { RecipesEntry } from "@/types";
import { getEntries } from "@lib/contentParser";
import { getTaxa } from "@lib/taxonomyParser";
import taxonomyFilter from "@lib/taxonomyFilter";
import TaxonLayout from "@components/recipes/TaxonLayout.astro";

export async function getStaticPaths() {
  const taxa = await getTaxa("recipes", "categories");
  const paths = taxa.map((taxon) => ({
    params: {
      category: taxon,
    },
    props: { taxon },
  }));
  return paths;
}

const { taxon } = Astro.props;
const entries = await getEntries("recipes") as RecipesEntry[];
const filteredEntries: RecipesEntry[] = taxonomyFilter(entries, "categories", taxon!);
---

<TaxonLayout taxon={taxon} entries={filteredEntries} />
